{
    "manifest_version":2,

    "background":{
        "scripts":["js/jquery.min.js", "js/icon_creator.js", "lib.js", "bg.js"]
    },

    "name":"Extra Headers",
    "description":"Enables adding or modifying HTTP request header",
    "version":"1.3",

    "icons":{
        "16":"ninja_ghost.png",
        "48":"ninja-ghost-48.png",
        "128":"ninja-ghost-128.png"
    },

    "permissions":[ "tabs", "background", "webRequest", "storage", "webRequestBlocking", "<all_urls>"],
    "browser_action":{
        "default_icon":"ninja_ghost.png",
        "default_popup":"popup.html"
    }
}
